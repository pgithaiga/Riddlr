doctype html
html(lang='en' ng-app)
head
    title Riddlr
    meta(http-equiv='content-type', content='text/html')
    meta(name='author', content='Team Riddlr - @TosinAF, George Ezenna, Peter Githaiga')
    meta(name='description', content='Riddlr, Local Restaurant Discovery by Solving Riddles')
    meta(name='keywords', content='riddlr, riddles, mit, iap, 6.470, web programmming competition, food, restaurant discovery')
    link(rel='icon', href='images/favicon.png', type='image/png')
    link(href='http://fonts.googleapis.com/css?family=Lato:100,300,400,700,900', rel='stylesheet', type='text/css')
    link(href='stylesheets/reset.css', rel='stylesheet', type='text/css')
    link(href='stylesheets/normalize.css', rel='stylesheet', type='text/css')
    link(href='stylesheets/demo.css', rel='stylesheet', type='text/css')
    link(href='stylesheets/component.css', rel='stylesheet', type='text/css')
    link(href='stylesheets/style-home.css', rel='stylesheet', type='text/css')
    script(src='javascripts/modernizr.custom.js')
    script(type='text/javascript', src='javascripts/vendor/angular/angular.js')
    script(type='text/javascript', src='javascripts/vendor/angular-route/angular-route.js')
  body
    section#main-header
      .inner
        .left
          ul#navv
            li
              a#logo(href='/landing') Riddlr
            li
              a.normal-button(href='mailto:tosman9000@gmail.com?Subject=I\'d%20Like%20To%20Submit%20A%20Riddle%20:)&body=We%20Promise%20Not%20To%20Spam%20You.') Submit a Riddle
            li
              a.normal-button(href='/logout') Log Out
        #profile-image(style='background: url(http://graph.facebook.com/' + user.oauthID + '/picture?width=15&height=15) no-repeat;')
        #profile-overview.right
          p#name #{user.name}
          p#details #{user.solveCount} Riddles, #{user.points} Points
        div(style='clear: both;')
    section#main
      .inner
        h2 What would you like to eat?
        ul#foodType
          a(href='#')
            li#active Anything
          - for type in riddleTypes
            a(href='#')
              li #{type}
      #vs-container.vs-container
        header.vs-header
          ul.vs-nav
            - for (var i = 0 ; i < riddleCount; i++)
              li
                a(href='#section-' + i) #{riddleNames[i]}
        .vs-wrapper
          - for (var i = 0 ; i < riddleCount; i++)
            section#section-i
              .vs-content
                h3
                  | #{riddleContent[i]}
    section#additional
      .inner
        #trending-riddles.box
          h1 Trending Riddles
          ul.vs-nav
            - for riddle in trendingRiddles
              li
                a(href='#section-1') #{riddle}
        #how-to-solve.box
          h1 How to Solve
          ol#solve-steps
            li Go to the restaurant
            li Compose a Facebook Status
            li Include a hashtag with the riddle name
            li Post!
          img#submit-demo-pic(src='images/submit-demo.jpg', width='50%')
    script(src='javascripts/classie.js')
    script(src='javascripts/hammer.min.js')
    script(src='javascripts/main.js')
