doctype html
html.no-js(lang='en')
head
    title Riddlr Home
    meta(charset='UTF-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    meta(name='keywords', content='visible sides, layout, sliding, three panels, css transforms, web development, tutorial, template')
    meta(name='author', content='Codrops')
    link(rel='shortcut icon', href='../favicon.ico')
    link(href='http://fonts.googleapis.com/css?family=Lato', rel='stylesheet', type='text/css')
    script(type='text/javascript', src='http://ajax.googleapis.com/ajax/libs/jquery/1.3.2/jquery.min.js')
       
    script(src='http://mihaifrentiu.com/wp-content/themes/mf/js/jquery_1.7.1.min.js', type='text/javascript')
    link(rel='stylesheet', type='text/css', href='stylesheets/normalize.css')
    link(rel='stylesheet', type='text/css', href='stylesheets/demo.css')
    link(rel='stylesheet', type='text/css', href='stylesheets/component.css')
    script(src='javascripts/modernizr.custom.js')
  body
    #riddlrHead.accordionButton
      .riddlrName Riddlr
      .profile1
        span
          a(href='#') #{user.name}
        p
          a(href='#') #{user.solveCount} riddles, #{user.points} points
      .profile_round
    #mainBody.accordionContent
      #foodOptions
        br
        br
        span What would you like to eat?
        ul
          - for type in riddleTypes
            li
              a(href='#') #{type}
      #vs-container.vs-container
        header.vs-header
          ul.vs-nav
            - for (var i = 0 ; i < riddleCount; i++)
              li
                a(href='#section-' + i) #{riddleNames[i]}
        .vs-wrapper
          - for (var i = 0 ; i < riddleCount; i++)
            section#section-i
              .vs-content
                h3
                  | #{riddleContent[i]} 
    #footers.accordionButton
      .accordionContent
      #tabmenu
        ul#nav
          li
            a.active(href='#') Trending Riddles
          li
            a(href='#') Get Help
          li
            a(href='#') Riddle of The Day
        #tab-content
          #tab1
            p These are the trending riddles
          #tab2
            p This is to provide help
          #tab3
            p This is the riddle of the day
            br
    script(src='javascripts/tabs.js')
    script(src='javascripts/slideup.js')
    script(src='javascripts/tabs.js')
    script(src='javascripts/classie.js')
    script(src='javascripts/hammer.min.js')
    script(src='javascripts/main.js')
